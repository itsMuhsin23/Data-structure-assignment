              MAX Heap & MIN Heap

Max Heap - The parent node is greater than or equal to its children. The largest element is at the root.

Min Heap - The parent node is less than or equal to its children. The smallest element is at the root.



#include <stdio.h>

#define MAX 100

int heap[MAX];
int size = 0;

void swap(int *a,int *b){
    int t = *a; *a = *b; *b = t;
}


void heapifyUp(int index){
    if(index && heap[index] > heap[(index - 1)/2]){
        swap(&heap[index], &heap[(index - 1)/2]);
        heapifyUp((index - 1)/2);
    }
}


void insertMaxHeap(int val){
    heap[size] = val;
    heapifyUp(size);
    size++;
}

// Heapify Down for Max Heap
void heapifyDown(int index){
    int left = 2*index + 1;
    int right = 2*index + 2;
    int largest = index;

    if(left < size && heap[left] > heap[largest]) largest = left;
    if(right < size && heap[right] > heap[largest]) largest = right;

    if(largest != index){
        swap(&heap[index], &heap[largest]);
        heapifyDown(largest);
    }
}


int extractMax(){
    if(size == 0) return -1;
    int root = heap[0];
    heap[0] = heap[--size];
    heapifyDown(0);
    return root;
}


// Code for Min Heap

#include <stdio.h>

#define MAX 100

int heap[MAX];
int size = 0;

void swap(int *a,int *b){
    int t = *a; *a = *b; *b = t;
}


void heapifyUp(int index){
    if(index && heap[index] < heap[(index - 1)/2]){
        swap(&heap[index], &heap[(index - 1)/2]);
        heapifyUp((index - 1)/2);
    }
}


void insertMinHeap(int val){
    heap[size] = val;
    heapifyUp(size);
    size++;
}


void heapifyDown(int index){
    int left = 2*index + 1;
    int right = 2*index + 2;
    int smallest = index;

    if(left < size && heap[left] < heap[smallest]) smallest = left;
    if(right < size && heap[right] < heap[smallest]) smallest = right;

    if(smallest != index){
        swap(&heap[index], &heap[smallest]);
        heapifyDown(smallest);
    }
}

int extractMin(){
    if(size == 0) return -1;
    int root = heap[0];
    heap[0] = heap[--size];
    heapifyDown(0);
    return root;
}



