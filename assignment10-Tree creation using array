                Tree creation using Array



The root is stored at index 0:
For a node at index i:
Left child → 2*i + 1
Right child → 2*i + 2
Parent → (i - 1) / 2



#include <stdio.h>

#define MAX 100

char tree[MAX];
int size = 0;


void insert(char value) {
    if (size >= MAX) {
        printf("Tree is full\n");
        return;
    }
    tree[size++] = value;
}


void inorder(int index) {
    if (index >= size)
        return;

    inorder(2 * index + 1);
    printf("%c ", tree[index]);
    inorder(2 * index + 2);
}


void preorder(int index) {
    if (index >= size)
        return;

    printf("%c ", tree[index]);
    preorder(2 * index + 1);
    preorder(2 * index + 2);
}


void postorder(int index) {
    if (index >= size)
        return;

    postorder(2 * index + 1);
    postorder(2 * index + 2);
    printf("%c ", tree[index]);
}
